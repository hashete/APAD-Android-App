<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginTop="100dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/post_image"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/post_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/post_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="39dp"
            android:layout_toRightOf="@+id/post_image"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/post_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/post_description"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="41dp"
            android:layout_toRightOf="@+id/post_image"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/post_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/post_tags"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="44dp"
            android:layout_toRightOf="@+id/post_image"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/post_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/post_location"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="43dp"
            android:layout_toRightOf="@+id/post_image"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>